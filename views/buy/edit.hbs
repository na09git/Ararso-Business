<div class="container row " style="padding-top: 2%; padding-right:5%; padding-left:30px;">
    <div class=" bg-info bg-opacity-10 border border-info border-start-0 rounded-end"
        style="padding-top: 20px; padding-right:10%; padding-left:10%;">

        <div class="row text-center" style="align-items: center;">
            <h3 class="bg-primary p-1" style="--bs-bg-opacity: .2; padding-left: 40px; padding-top: 70px;">
                Odeeffannoo Bittaa Sirreessi</h3>
        </div>

        <div class="row " style="padding-left: 10px;">
            <form action="/buy/{{buy._id}}" method="POST" class="col-md-8 col-lg-8" enctype="multipart/form-data">
                <input type="hidden" name="_method" value="post">
                <!-- 1 Name--->
                <div class="mb-2 row" style="padding-top:20px;">
                    <div class="col-3">
                        <label for="name" class="form-label"> Maqaa Nama Meshaa Bite:</label>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="name" name="name" value="{{buy.name}}">
                    </div>
                </div>
                <!-- 2 Material -->
                <div class="mb-2 row">
                    <div class="col-3">
                        <label for="material" class="form-label">Meshaa-Bitamtee:</label>
                    </div>
                    <div class="col">
                        <select class="form-select" id="material" name="material">
                            <option value="Dinicha" {{#if (eq buy.material 'Dinicha' )}}selected{{/if}}>Dinicha
                            </option>
                            <option value="Karot" {{#if (eq buy.material 'Karot' )}}selected{{/if}}>Karot</option>
                            <option value="Kurumba" {{#if (eq buy.material 'Kurumba' )}}selected{{/if}}>Kurumba
                            </option>
                            <option value="Qayasir" {{#if (eq buy.material 'Qayasir' )}}selected{{/if}}>Qayasir
                            </option>
                            <option value="Shunkurtaa" {{#if (eq buy.material 'Shunkurtaa' )}}selected{{/if}}>
                                Shunkurtaa
                            </option>
                            <option value="Shukaar" {{#if (eq buy.material 'Shukaar' )}}selected{{/if}}>Shukaar
                            </option>
                            <option value="Timaatim" {{#if (eq buy.material 'Timaatim' )}}selected{{/if}}>Timaatim
                            </option>
                            <option value="Luqqaa" {{#if (eq buy.material 'Luqqaa' )}}selected{{/if}}>Luqqaa</option>
                            <option value="Joniya" {{#if (eq buy.material 'Joniya' )}}selected{{/if}}>Joniya</option>
                            <option value="Car Material" {{#if (eq buy.material 'Car Material' )}}selected{{/if}}>Car
                                Material</option>
                            <option value="Building Material" {{#if (eq buy.material 'Building Material'
                                )}}selected{{/if}}>Building Material</option>
                            <option value="Other" {{#if (eq buy.material 'Other' )}}selected{{/if}}>Other</option>
                        </select>

                    </div>
                </div>
                <!-- 3 From_Seller--->
                <div class="mb-2 row">
                    <div class="col-3">
                        <label for="from_seller" class="form-label">Nama-Iraa-Bitame:</label>
                    </div>
                    <div class="col">
                        <input type="from_seller" class="form-control" id="from_seller" name="from_seller"
                            value="{{buy.from_seller}}">
                    </div>
                </div>
                <!-- 4 Phone --->
                <div class="mb-2 row">
                    <div class="col-3">
                        <label for="phone" class="form-label">Bilbila :</label>
                    </div>
                    <div class="col">
                        <input type="tel" class="form-control " id="phone" name="phone" value="{{buy.phone}}">
                    </div>
                </div>
                <!-- 5 dallaala--->
                <div class="mb-2 row">
                    <div class="col-3">
                        <label for="dallaala" class="form-label">Dallaala :</label>
                    </div>
                    <div class="col">
                        <input type="dallaala" class="form-control" id="dallaala" name="dallaala"
                            value="{{buy.dallaala}}">
                    </div>
                </div>
                <!-- 6 kilo --->
                <div class="mb-2 row">
                    <div class="col-3">
                        <label for="kilo" class="form-label">kilo:</label>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control " id="kilo" name="kilo" value="{{buy.kilo}}">
                    </div>
                </div>
                <!-- 7 Amount in Birr --->
                <div class="mb-2 row">
                    <div class="col-3">
                        <label for="birr" class="form-label">Gatii-Birr:</label>
                    </div>
                    <div class="col">
                        <input type="birr" class="form-control " id="birr" name="birr" value="{{buy.birr}}">
                    </div>
                </div>

                <!-- 8 status --->
                <div class="mb-2 row">
                    <div class="col-3">
                        <label for="status" class="form-label">Haala Kaffalti:</label>
                    </div>
                    <div class="col">
                        <select class="form-select" id="status" name="status">
                            <option value="Paid" {{#if (eq buy.status 'Paid' )}}selected{{/if}}>Paid
                            </option>
                            <option value="Not-Paid" {{#if (eq buy.status 'Not-Paid' )}}selected{{/if}}>
                                Not-Paid
                            </option>
                        </select>
                    </div>
                </div>
                <!-- 9 Note --->
                <div class="mb-2 row">
                    <div class="col-3">
                        <label for="body" class="form-label">Yaadannoo:</label>
                    </div>
                    <div class="col">
                        <textarea class="form-control" id="body" name="body">{{buy.body}}</textarea>
                    </div>
                </div>


                <!-- 10 Image--->
                <div class="mb-2 row">
                    <div class="col-3">
                        <label for="image" class="form-label">Suuraa Filadhuu:</label>
                    </div>
                    <div class="col">
                        <input type="file" class="form-control" id="image" name="image">
                        {{#if buy.imageBase64}}
                        <img src='data:{{buy.contentType}};base64,{{buy.imageBase64}}' alt="{{buy.name}}" width="100">
                        {{else}}
                        <img src="images/no_image.png" alt="{{buy.name}}" width="100" class="img-thumbnail">
                        {{/if}}
                    </div>
                </div>
                <!-- 11 Action--->
                <div class="mb-2" style="padding-left: 120px;">
                    <input style="padding-left: 10%; padding-right: 10%;" type="submit" value="Save"
                        class="btn btn-primary">
                    <a style="padding-left: 10%; padding-right: 10%;" href="/buys" class="btn btn-warning">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>